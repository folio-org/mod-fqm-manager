      "version": "10.0"
    },
    {
      "id": "instance-types",
      "version": "2.0"
    },
    {
      "id": "loan-types",
      "version": "2.2"
    },
    {
      "id": "material-types",
      "version": "2.2"
    },
    {
      "id": "shelf-locations",
      "version": "1.1"
    },
    {
      "id": "location-units",
      "version": "2.0"
    },
    {
      "id": "locations",
      "version": "3.0"
    },
    {
      "id": "call-number-types",
      "version": "1.0"
    },
    {
      "id": "holdings-types",
