    },
    {
      "id": "service-points",
      "version": "3.3"
    },
    {
      "id": "users",
      "version": "16.0"
    },
    {
      "id": "user-tenants",
      "version": "1.0"
    },
    {
      "id": "loan-policy-storage",
      "version": "2.3"
    },
    {
      "id": "loan-storage",
      "version": "7.1"
    },
    {
      "id": "organizations-storage.organizations",
      "version": "3.3"
    },
    {
      "id": "organizations-storage.organization-types",
      "version": "1.0"
    },
    {
      "id": "orders-storage.po-lines",
      "version": "12.0"
